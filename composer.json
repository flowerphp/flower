{
  "name": "flowerphp/flower",
  "description": "Flower a new Framework",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "AGPL-3.0-only",
  "authors": [
    {
      "name": "FlexICE",
      "email": "fl3xice@yandex.ru"
    }
  ],
  "require": {
    "ext-pdo": "*",
    "guzzlehttp/guzzle": "7.0.1",
    "league/flysystem": "^1.0",
    "ext-json": "*",
    "jenssegers/blade": "^1.3",
    "ext-fileinfo": "*",
    "klein/klein": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "App\\Core\\": "app/core",
      "Flower\\": "app/flower"
    },
    "classmap": [
      "app/core/databases/",
      "app/core/promises/",
      "app/core/session",
      "app/flower/CoreAPI"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  }
}
